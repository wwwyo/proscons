<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <div class="bg-light" style="width: 100vw; height: 100vh;">
    <div style="padding:5% 15% 0;">
      <h1 class="border-bottom pb-2">アカウント登録</h1>
      <%= render "share/errors_messages", model: f.object %>
      <div class="form-group mt-2" style="width:90%;">
        <%= f.label :nickname, 'ニックネーム' %>
        <%= f.text_field :nickname, class: "form-control", id: "nickname", placeholder: "ご利用時に表示されます", maxlength: "15" %>
      </div>
      <div class="form-group mt-2" style="width:90%;">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: "form-control", id: "email", aria_describedby: "emailHelp", placeholder: "PC/携帯どちらでも可" %>
      </div>
      <div class="form-group mt-2" style="width:90%;">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: "form-control", id: "password", placeholder: "6文字以上の半角英数字" %>
      </div>
      <%=f.submit '登録', class:"btn btn-primary mt-2", style:"width: 30%;" %>
      <div class="mt-3">
        <%= link_to "ログインする", new_user_session_path %>
      </div>
      <div class="mt-1">
      <%= link_to "ゲストログイン", ballot_boxes_path, class: "btn btn-light pl-0", style: "text-decoration: none;"%>
      </div>
    </div>
  </div>
<% end %>