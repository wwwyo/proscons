<div class="bg-light d-flex justify-content-center pt-5" style="width: 100vw; height: 100vh;">
  <div class="d-flex align-items-center border mt-5 pt-1 px-4" style="width: 50vh; height: 70%;">
    <div class="container mx-auto" style="width: 50vw; height: 50vh;">
      <h2 class="border-bottom">prosconsにログイン</h2>
      <div class="text-danger mb-4">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group my-3">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: "form-control", id: "email", aria_describedby: "emailHelp", placeholder: "メールアドレス" %>
        </div>
        <div class="form-group my-3">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: "form-control", id: "password", placeholder:"パスワード" %>
        </div>
        <%= f.submit 'ログイン', class:"btn btn-primary mt-4", style:"width: 30%;" %>
        <div class="mt-3">
          <%= link_to "新しいアカウントを作成", new_user_registration_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
