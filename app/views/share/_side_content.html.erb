<div class="col-3 border-right">
  <div class="container" style="height: 100%;">
    <div class="mt-3 d-flex align-items-center border-bottom btn pl-0" style="width: 100%; height: 8%;">
      <% if user_signed_in?%>
        <p data-toggle="dropdown" href="#"style="color:black; font-size:20px;"><%= current_user.nickname %></p>
        <div class="dropdown-menu">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <a class="dropdown-item" href="#">詳細</a>
          <a class="dropdown-item" href="#">設定</a>
        </div>
      <% else %>
        <%= link_to "ログインする", new_user_session_path, style: "color:black; font-size:20px;" %>
      <% end %>
    </div>
    <div class="d-flex align-items-center btn mt-5 pl-0 border-bottom" style="width: 100%; height: 8%;">
      <%= link_to "投票する", ballot_boxes_path, style:"color:black;font-size:20px" %>
    </div>
    <div class="side-main mt-5 pt-4" style="height: 70%; overflow: scroll;">
      <div style="font-size:20px">チャンネル</div>
      <% if user_signed_in?%>
        <div class="list-group " style="list-style: none; font-size: 12px; ">
          <% user_rooms.each do |user_room| %>
            <a class="list-group-item list-group-item-action py-1" style="border :none; white-space: nowrap;overflow: hidden;text-overflow: ellipsis;" data-toggle="list" href="#">
              <%= "▶︎#{user_room.room.ballot_box.question}" %>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- jQuery読み込み -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<!-- PopperのJS読み込み -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
<!-- BootstrapのJS読み込み -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>  